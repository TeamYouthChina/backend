<dataConfig>
    <dataSource type="JdbcDataSource"
                driver="com.mysql.jdbc.Driver"
                url="jdbc:mysql://172.28.1.1:3306/youthchina"
                user="root"
                password="rootpass"/>

    <document>
        <entity name="question"
                pk="QUES_ID"
                query="SELECT QUES_ID, QUES_TITLE, QUES_ABBRE, QUES_BODY FROM COM_QUESTION">
            <field column="QUES_ID" name="ques_id"/>
            <field column="QUES_TITLE" name="ques_title"/>
            <field column="QUES_ABBRE" name="ques_abbre"/>
            <field column="QUES_BODY" name="ques_body"/>
        </entity>

        <entity name="user"
                pk="USER_ID"
                query="SELECT USER_ID, USER_NAME, USER_PHONE FROM SYS_USER">
            <field column="USER_ID" name="user_id"/>
            <field column="USER_NAME" name="user_name"/>
            <field column="USER_PHONE" name="user_phone"/>
        </entity>

        <entity name="essay"
                pk="ESSAY_ID"
                query="SELECT ESSAY_ID, ESSAY_TITLE, ESSAY_ABBRE, ESSAY_BODY FROM COM_ESSAY">
            <field column="ESSAY_ID" name="essay_id"/>
            <field column="ESSAY_TITLE" name="essay_title"/>
            <field column="ESSAY_ABBRE" name="essay_abbre"/>
            <field column="ESSAY_BODY" name="essay_body"/>
        </entity>

        <entity name="video"
                pk="VIDEO_ID"
                query="SELECT VIDEO_ID, VIDEO_TITLE, VIDEO_NAME, VIDEO_DESCRIPTION FROM COM_VIDEO">
            <field column="VIDEO_ID" name="video_id"/>
            <field column="VIDEO_TITLE" name="video_title"/>
            <field column="VIDEO_NAME" name="video_name"/>
            <field column="VIDEO_DESCRIPTION" name="video_description"/>
        </entity>

        <entity name="job"
                pk="JOB_ID"
                query="SELECT JOB_ID, JOB_NAME, JOB_DESCRIPTION FROM JOB_INFO">
            <field column="JOB_ID" name="job_id"/>
            <field column="JOB_NAME" name="job_name"/>
            <field column="JOB_DESCRIPTION" name="job_description"/>
        </entity>

        <entity name="company"
                pk="COMPANY_ID"
                query="SELECT COMPANY_ID, COMPANY_NAME, COMPANY_LOCATION FROM COMPANY_INFO">
            <field column="COMPANY_ID" name="company_id"/>
            <field column="COMPANY_NAME" name="company_name"/>
            <field column="COMPANY_LOCATION" name="company_location"/>
        </entity>

        <entity name="comment"
                pk="COMMENT_ID"
                query="SELECT COMMENT_ID, COMMENT_CONTENT FROM COM_COMMENT">
            <field column="COMMENT_ID" name="comment_id"/>
            <field column="COMMENT_CONTENT" name="comment_content"/>
        </entity>

        <entity name="answer"
                pk="ANSWER_ID"
                query="SELECT ANSWER_ID, ANSWER_BODY FROM COM_ANSWER">
            <field column="ANSWER_ID" name="answer_id"/>
            <field column="ANSWER_BODY" name="answer_body"/>
        </entity>

    </document>

</dataConfig>