<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.youthchina.dao.Qinghong.InvitationMapper">
    <resultMap id="InvitationResultMap" type="com.youthchina.domain.Qinghong.Invitation">
        <id column="INVITE_ID" property="invite_id" jdbcType="INTEGER"/>
        <result column="INVITE_TIME" property="invite_time" jdbcType="INTEGER"/>
        <result column="INVITE_USER_ID" property="invite_user_id" jdbcType="INTEGER"/>
        <association property="inviationMapper" javaType="com.youthchina.domain.Qinghong.InviationMapper">
          <id column="INVITE_ID" property="invite_id" jdbcType="INTEGER" />
          <result column="user_id" property="USER_ID" jdbcType="INTEGER" />
        </association>

    </resultMap>

    <resultMap id="BaseInfoMap" type="com.youthchina.domain.Qinghong.BaseInfo">
        <id column="STU_ID" property="stu_id" jdbcType="INTEGER"/>
        <result column="STU_IN_JOB" property="stu_in_job" jdbcType="VARCHAR"/>
        <result column="STU_IN_JOB_COMP" property="stu_in_job_comp" jdbcType="VARCHAR"/>
    </resultMap>
    <resultMap id="EduInfoMap" type="com.youthchina.domain.Qinghong.EducationInfo">
        <id column="EDU_ID" property="EDU_id" jdbcType="VARCHAR"/>
        <result column="EDU_DEGREE" property="edu_degree" jdbcType="INTEGER"/>
        <result column="EDU_SCHOOL" property="edu_school" jdbcType="VARCHAR"/>
        <result column="EDU_SCHOOL_COUNTRY" property="edu_school_country" jdbcType="VARCHAR"/>
        <result column="EDU_SCHOOL_LOCATION" property="edu_school_location" jdbcType="INTEGER"/>
        <result column="EDU_MAJOR" property="edu_major" jdbcType="INTEGER"/>
        <result column="EDU_COLLEGE" property="edu_college" jdbcType="VARCHAR"/>
        <result column="EDU_GPA" property="edu_gpa" jdbcType="DECIMAL"/>
        <result column="EDU_END" property="edu_end" jdbcType="VARCHAR"/>
    </resultMap>



    <select id="findInvitationMapper" resultMap="InvitationResultMap">
        SELECT t1.*,t2.*
        FROM HR_VIDEO_INVITATION t1,
        HR_VIDEO_INVITATION_MAPPER t2
        WHERE t1.INVITE_ID={#id} AND t2.INVITE_ID={#id}
    </select>
    <update id=""





</mapper>


